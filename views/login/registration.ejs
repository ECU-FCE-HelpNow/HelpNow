<% include ../partials/header %>
<div class="parent">
    <div class="boxIt">
        <h1 style="text-align: left;">Memeber Registration</h1><br>
        <p>Welcome to Help now! We're eager to have you join us!</p><br>

        <p>
            Once you've created an account, you'll be taken to the payment portal where you can
            complete payment for your Membership
        </p><br>

        <form method="POST" action="/payment">
            <div class="memForm">
                <label for="firstName" class="midRight">* First Name</label><input type="text" placeholder="Enter First Name" name="firstName" required>
                <p style="font-style: italic;">* Denotes Required Fields</p>
                <label for="secondName" class="midRight">* Second Name</label><input type="text" placeholder="Enter Second Name" name="secondName" required><br>
            </div>
            <div class="memForm2">
                <label for="email" class="midRight">* Email</label><input type="email" placeholder="Enter Email" name="email" required>
                <label for="dob" class="midRight">* Date of Birth</label><input type="date" placeholder="Enter Date of Birth" name="dob" required>
                <label for="phone" class="midRight">Phone Number</label><input type="tel" placeholder="Enter Phone Number" name="phone">
                <label for="address" class="midRight">Address</label><input type="text" placeholder="Enter Address" name="address">
            </div>
            <div class="memForm3">
                <p class="midRight">* Club Membership</p>
                <input type="checkbox" id="archer" name="club" value="archer">                
                <label for="club"> Archer Club</label>
                <p class="midRight">(minimum of 2)</p>
                <input type="checkbox" id="flowers" name="club" value="flowers">
                <label for="club"> Floral Arrangement Club</label>
                
                <br><input type="checkbox" id="chess" name="club" value="chess">
                <label for="club"> Chess Club</label>
                <br><input type="checkbox" id="bowls" name="club" value="bowls">
                <label for="club"> Lawn Bowling Club</label>
                <br><input type="checkbox" id="book" name="club" value="book">
                <label for="club"> Antique Book Club</label>
            </div>
            <script>
                var result = 0
                showChecked();
                function showChecked(){
                  result = document.querySelectorAll("input:checked").length;
                  if (result >= 2) {
                    document.getElementById("archer").required = false;
                    document.getElementById("flowers").required = false;
                    document.getElementById("chess").required = false;
                    document.getElementById("bowls").required = false;
                    document.getElementById("book").required = false;
                  }else{
                    document.getElementById("archer").required = true;
                    document.getElementById("flowers").required = true;
                    document.getElementById("chess").required = true;
                    document.getElementById("bowls").required = true;
                    document.getElementById("book").required = true;
                  }
                }

                document.querySelectorAll("input[name=club]").forEach(i=>{
                 i.onclick = function(){
                  showChecked();
                 }
                });
                </script>
            <div class= "memButtons">
                <button type="reset">Clear</button><button type="submit">Submit</button>
            </div>
        </form>

    </div>
</div>
<% include ../partials/footer %>